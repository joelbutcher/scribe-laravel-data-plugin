{
    "name": "joelbutcher/scribe-laravel-data-plugin",
    "description": "A Scribe plugin for Spatie's Laravel Data package.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Joel Butcher",
            "email": "joelbutcher@users.noreply.github.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "knuckleswtf/scribe": "^4.39",
        "spatie/laravel-data": "^3.0|^4.0"
    },
    "autoload": {
        "psr-4": {
            "JoelButcher\\ScribeLaravelDataPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JoelButcher\\ScribeLaravelDataPlugin\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "require-dev": {
        "pestphp/pest": "^3.7",
        "orchestra/testbench": "^9.9"
    },
    "scripts": {
        "test": "php ./vendor/bin/pest"
    }
}
